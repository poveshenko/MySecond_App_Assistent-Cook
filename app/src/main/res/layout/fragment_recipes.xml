<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container_recipes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_background_main_img"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".fragments_Main.RecipesFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewRecipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" Блюда на любой вкус "
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black_transparent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewRecipes">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/frameLayoutSoup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:elevation="8dp">

                <ImageView
                    android:id="@+id/ButtonSoup"
                    android:layout_width="170dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:paddingBottom="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/recipe_soup" />

                <TextView
                    android:id="@+id/textSoup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="200dp"
                    android:text="Супы"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

            </FrameLayout>


            <FrameLayout
                android:id="@+id/frameLayoutSalad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_corner_3"
                android:elevation="8dp">

                <ImageView
                    android:id="@+id/ButtonSalad"
                    android:layout_width="170dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"

                    android:paddingBottom="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/drawable_fragments_menu_salat2" />

                <TextView
                    android:id="@+id/textSalad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="200dp"
                    android:text="Салаты"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/frameLayoutLunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                app:cardElevation="6dp">

                <ImageView
                    android:id="@+id/ButtonLunch"
                    android:layout_width="170dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:paddingBottom="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/drawable_fragments_menu_lunch" />

                <TextView
                    android:id="@+id/textLunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="200dp"
                    android:text="Обеды"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="25sp" />


            </FrameLayout>


            <FrameLayout
                android:id="@+id/frameLayoutSnack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_corner"
                android:elevation="8dp">

                <ImageView
                    android:id="@+id/ButtonSnack"
                    android:layout_width="170dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:paddingBottom="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/recipe_snacks" />

                <TextView
                    android:id="@+id/textSnackMenuMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="200dp"
                    android:text="Перекус"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="25sp" />


            </FrameLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner_4"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@android:color/black"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false">

                <EditText
                    android:id="@+id/editTextSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="поиск"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/darker_gray" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:id="@+id/buttonSearch"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/white"
                    android:contentDescription="search"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/search" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>







